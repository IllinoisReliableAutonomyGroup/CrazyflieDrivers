<launch>
    <arg name="drone_id" default="karteek_drone" />
    <arg name="uri" default="radio://0/80/2M" />


    <include file="$(find mocap_vicon)/launch/vicon.launch">
    </include>

    <rosparam file="$(find crazyflie_ros)/config/controller_params.yaml" command="load" ns="controller" />
    
    <node name="controller" pkg="crazyflie_ros" type="cas_pid_node.py" output="screen">
        <param name="drone_id" value="$(arg drone_id)" />
    </node>

    <include file="$(find crazyflie_ros)/launch/driver.launch">
        <arg name="uri" value="$(arg uri)" />
        <arg name="drone_id" value="$(arg drone_id)" />
    </include>
    
    <node name="rqt_reconfigure" pkg="rqt_reconfigure" type="rqt_reconfigure" output="screen" />

   

</launch>